{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ESNext"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "baseUrl": ".",

    "outDir": "dist/",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "inlineSourceMap": true,

    "strict": true,
    "skipLibCheck": true
  }
}